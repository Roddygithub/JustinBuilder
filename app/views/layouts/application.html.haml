%html
  %head
    %meta{:charset => "utf-8"}
    %meta{"http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1"}
    %title= content_for?(:title) ? yield(:title) : "GW2 Test"
    %meta{:content => "", :name => "description"}
    %meta{:content => "", :name => "author"}
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    = yield(:head)
  %body{style: 'background-color: #000'}
    /%header.navbar.navbar-fixed-top
    /  %nav.navbar-inner
    /    .container
    /      = render 'layouts/navigation'
    #main{:role => "main"}
      .container-fluid
        %header.jumbotron.subhead
          %h1
            GW2:Dashboard
            %small [dev build]
          %p Expect nothing to work and that things may look ugly, like you.. *oh snap!*
        .row-fluid
          .span2
            .well.sidebar-nav
              = render 'layouts/navigation'
          .span10.clearfix
            - if flash
              .row-fluid
                .span12
                  - flash.each do |name, msg|
                    %div{:class => "alert alert-#{name == :notice ? "success" : name}"}
                      %a.close{"data-dismiss" => "alert"} Ã—
                      = msg
            = yield
        %hr
        %footer
          %p
            &copy; nrml[ddh] 2012. 
            Guild Wars 2, and all associated logos and designs are trademarks or registered trademarks of NCsoft Corporation.
        = debug(params) if Rails.env.development?
